<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".androidTrials.ViewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_view_activity"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:gravity="start|center"
            android:textColor="#00ff00"
            android:textSize="24sp"
            android:text="TextView" />

        <Button
            android:id="@+id/btn_view_activity"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:text="Button" />

        <EditText
            android:id="@+id/edit_text_view_activity"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:hint="EditText Input Your Content Here!"
            android:autofillHints="text"
            android:inputType="text"
            android:maxLines="2" />

        <ImageView
            android:id="@+id/image_view_view_activity"
            android:src="@drawable/ic_launcher_background"
            android:contentDescription="boardIcon"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <ProgressBar
            android:id="@+id/progress_bar_view_activity"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:max="100" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>