<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FlaMingCoding">
        <activity
            android:name=".androidDevArt.ActivityLifecycleActivity2"
            android:exported="false" />
        <activity
            android:name=".androidDevArt.ActivityLifecycleActivity1"
            android:exported="false" />
        <activity
            android:name=".androidTrials.WorkManagerPracticeActivity"
            android:exported="false"
            android:label="WorkManagerPracticeActivity" />
        <activity
            android:name=".androidTrials.RoomPracticeActivity"
            android:exported="false" />
        <activity
            android:name=".androidTrials.LifecyclePracticeActivity"
            android:exported="false" />
        <activity
            android:name=".androidTrials.ViewModelPracticeActivity"
            android:exported="false"
            android:label="JetPackTest" />
        <activity
            android:name=".androidTrials.MaterialDesignActivity"
            android:exported="false"
            android:theme="@style/Theme.Design.NoActionBar" />
        <activity
            android:name=".androidTrials.CoroutinesPracticeActivity"
            android:exported="false" />
        <activity
            android:name=".androidTrials.HttpRequestPracticeActivity"
            android:exported="false" />
        <activity
            android:name=".androidTrials.WebViewActivity"
            android:exported="false"
            android:label="WebViewActivity" />
        <activity
            android:name=".androidTrials.ServicePracticeActivity"
            android:exported="false" />
        <activity
            android:name=".androidTrials.NotificationActivity"
            android:exported="false" />
        <activity
            android:name=".androidTrials.ContentProviderActivity"
            android:exported="false" />
        <activity
            android:name=".androidTrials.PermissionActivity"
            android:exported="false" />
        <activity
            android:name=".androidTrials.SQLLiteDatabaseActivity"
            android:exported="false" />
        <activity
            android:name=".androidTrials.DataPersistenceActivity"
            android:exported="false" />
        <activity
            android:name=".androidTrials.BroadcastActivity"
            android:exported="false" />
        <activity
            android:name=".androidTrials.FragmentActivity"
            android:exported="false"
            android:label="FragmentActivity" />
        <activity
            android:name=".androidTrials.RecycleViewActivity"
            android:exported="false" />
        <activity
            android:name=".androidTrials.ListViewActivity"
            android:exported="false" />
        <activity
            android:name=".androidTrials.LayoutActivity"
            android:exported="false" />
        <activity
            android:name=".androidTrials.ViewActivity"
            android:exported="false" />
        <activity
            android:name=".androidTrials.ThirdActivity"
            android:exported="true"
            android:label="ThirdActivity">
            <intent-filter tools:ignore="AppLinkUrlError">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:scheme="https" />
            </intent-filter>
        </activity>
        <activity
            android:name=".androidTrials.SecondActivity"
            android:exported="false"
            android:label="SecondActivity">
            <intent-filter>
                <action android:name="com.example.flamingcoding.ACTION_START" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".androidTrials.HomeActivity"
            android:exported="true"
            android:label="HomeActivity"
            android:launchMode="singleInstance"
            android:theme="@style/Theme.FlaMingCoding">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".androidTrials.TestBoardCastReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="com.example.flamingcoding.androidTrials.TEST_BROADCAST" />
            </intent-filter>
        </receiver>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.flamingcoding.androidTrials.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>

        <service
            android:name=".androidTrials.PracticeService"
            android:enabled="true"
            android:exported="true"
            android:foregroundServiceType="dataSync" />
    </application>

</manifest>